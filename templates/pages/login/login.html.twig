{% extends 'base.html.twig' %}

{% block title %}
    Burgerdi - Se connecter
{% endblock %}

{% block body %}

<div class="login-container">
    <div class="container login-block">
        <div class="block-login">
            <div class="connect">

                {% for message in app.flashes('success') %}
                    <div class="flash-notice" style="width: fit-content; padding: 1rem 3rem;margin-top: 0; background-color: #00a600d9; display: flex; justify-content: center; align-items: center; border-radius: 0 20px;">
                        {{ message }}
                    </div>
                {% endfor %}

                <h2 class="title-connect">Connexion</h2>

                <form action="{{ path('security.login') }}" method="post" name="login">

                    <div class="col-form-login">
                        {# <label for="username">Adresse e-mail</label> #}
                        <input type="email" class="" id="username" placeholder="exemple@burgerdi.fr" name='_username' value="{{ last_username }}">
                    </div>
                    <div class="col-form-login">
                        {# <label for="password">Mot de passe</label> #}
                        <input type="password" class="password-connect" id="password" placeholder="Mot de passe" name='_password'>
                    </div>

                    <div class="section-btn-login">
                        <button type="submit" class="btn">Se connecter</button>
                    </div>

                    {% if error %}
                        <div class="alert">
                            {{ error.messageKey | trans(error.messageData, 'security')}}
                        </div>
                    {% endif %}
                </form>
            </div>
            <div class="registration-block">
                <h2 class="registration-title">Toujours pas de compte ?</h2>
                <p>N'hésite pas à t'inscrire alors !</p>

                <a href="{{ path('security.registration') }}" class="btn-white">S'inscrire</a>
            </div>
        </div>
    </div>
</div>


{% endblock %}
