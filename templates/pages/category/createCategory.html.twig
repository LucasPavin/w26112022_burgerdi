{% extends 'base.html.twig' %}

{% block title %}Burgerdi - Category{% endblock %}

{% block body %}

    <div class="container">
        <h2 class="agency">Liste de l'ensemble des agences</h2>


        <form name="category" method="post">
            <div class="row">
                <div class="col">
                    {{ form_label(form.name)}}
                    {{ form_widget(form.name )}}
                    <div class="form-error">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="col">
                    {{ form_label(form.id_meal)}}
                    {{ form_widget(form.id_meal )}}
                    <div class="form-error">
                        {{ form_errors(form.id_meal) }}
                    </div>
                </div>
                {{ form_row(form._token) }}
                <button type="submit" id="category_submit" name="category[submit]" class="btn btn-submit">Cr√©er une agence</button>
            </div>
        </form>
    </div>
{% endblock %}