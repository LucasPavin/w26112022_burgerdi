{% extends 'base.html.twig' %}

{% block title %}Burgerdi - Category{% endblock %}

{% block body %}

    <div class="container">
            <h2 class="agency">Liste de l'ensemble des agences</h2>

            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    {{ form_label(form.name)}}
                    {{ form_widget(form.name )}}
                    <div class="form-error">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="col">
                    {{ form_label(form.id_meal)}}
                    {{ form_widget(form.id_meal )}}
                    <div class="form-error">
                        {{ form_errors(form.id_meal) }}
                    </div>
                </div>
                {{ form_row(form.submit) }}
            </div>
        {{ form_end(form) }}

    </div>

{% endblock %}